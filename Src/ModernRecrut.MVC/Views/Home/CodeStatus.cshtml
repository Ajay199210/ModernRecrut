@model ModernRecrut.MVC.Models.CodeStatusViewModel
@{
    ViewData["Title"] = "Code Status";
}
<h1>CodeStatus</h1>
<div>
    <h4>CodeStatusViewModel</h4>
    <hr />
    <h2 class="text-danger">Code HTTP: @Model.CodeStatus</h2>
    @if(Model.CodeStatus == 404) {
        <img src="~/images/404.jpg" style="width:500px; height:300px;" />

    }
    else if(Model.CodeStatus == 500)
    {
        <img src="~/images/500.jpg" style="width:500px; height:300px;" />
    }
    <h2 class="text-danger"> @Model.MessageErreur</h2>
    @if (Model.MontrerIdRequete)
    {
        <h3>Request ID</h3>
        <p>
            <code>@Model.IdRequete</code>
        </p>
    }
</div>