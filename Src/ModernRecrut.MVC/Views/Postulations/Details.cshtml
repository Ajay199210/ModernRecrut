@model ModernRecrut.MVC.Models.Postulations.Postulation

@{
    ViewData["Title"] = "Details";
}

<h1>Détails</h1>

<div>
    <h4>Postulation #@Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdCandidat)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Candidat.Prenom) @Html.DisplayFor(model => model.Candidat.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdOffreEmploi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.OffreEmploi.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.PretentionSalariale)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.PretentionSalariale)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateDisponibilite)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateDisponibilite)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Notes)
        </dt>
        <dd class="col-sm-10">
            <table class="table table-striped table-dark table-bordered text-center mt-1 align-middle table-hover">
                <tr>
                    <th>Émetteur</th>
                    <th>Note</th>
                    <th>Action</th>
                </tr> 
                @foreach (var item in Model.Notes)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.NomEmetteur)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Contenu)
                        </td>
                        <td>
                            <a class="text-warning" asp-action="Edit" asp-controller="Notes" asp-route-id="@item.Id">Modifier</a> |
                            <a class="text-warning" asp-action="Delete" asp-controller="Notes" asp-route-id="@item.Id">Supprimer</a>
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>

<div>
    @if (Model.DateDisponibilite > DateTime.Now.AddDays(-5) && Model.DateDisponibilite < DateTime.Now.AddDays(5))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">Modifier</a> <span>|</span>
    }
    <a asp-action="Create" asp-controller="Notes" asp-route-id="@Model?.Id" class="btn btn-primary">Ajouter une note</a> |
    <a asp-action="Index" class="btn btn-primary">Retourner à la liste des postulations</a>
</div>
