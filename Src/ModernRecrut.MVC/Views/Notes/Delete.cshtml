@model ModernRecrut.MVC.Models.Postulations.Note;

@{
    ViewData["Title"] = "Delete";
}

@if (Model.NomEmetteur == "ApplicationPostulation")
{
    <h3 class="text-danger">
        Vous ne pouvez pas supprimer la note
        généré automatiquement par l'application
    </h3>
}
else
{
    <h3>Êtes-vous sûr de vouloir supprimer la note ?</h3>
}

<div>
    <h4>Note #@Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IdPostulation)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdPostulation)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomEmetteur)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomEmetteur)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Contenu)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Contenu)
        </dd>
    </dl>
    @if (Model.NomEmetteur != "ApplicationPostulation")
    {
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Supprimer" class="btn btn-danger" /> |
            <a class="btn btn-primary" asp-action="Details" asp-controller="Postulations" asp-route-id="@Model.IdPostulation">
                Retourner à la fiche de la postulation
                </a>
        </form>
    }

    else 
    {
        <div>
            <a asp-action="Details" asp-controller="Postulations" asp-route-id="@Model.IdPostulation" 
            class="btn btn-primary">Retourner à la fiche de la postulation</a>
        </div>
    }
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
