@model ModernRecrut.MVC.Models.OffreEmploi;

@{
    ViewData["Title"] = "Details";
}

<h1>Fiche de l'offre d'emploi</h1>

<div>
    <h4>Offre #@Model.Id</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Poste)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Poste)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateAffichage)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateAffichage)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateFin)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateFin)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Modifier</a> |
    <a asp-action="Index">Retourner à la liste des offres d'emplois</a> |
    <a asp-action="Index" asp-controller="Favoris">Accèder aux favoris</a>
</div>

<br />

@if(User.IsInRole("Candidat") )
{
    <div>
        <a asp-action="Postuler" asp-controller="Postulations" asp-route-id="@Model?.Id" class="btn btn-primary">
            Postuler votre candidature pour cette offre
        </a>
    </div>
}
